extends layout

block content
  .container
    .row
      .col-md-6
        .panel.panel-default
          .panel-heading
            h3.panel-title.text-center #{payForm.title}
          .panel-body(style="height:35rem;overflow:auto")
            form.form-horizontal
              each item,i in payForm.data
                +addRow(item.id,item.name,item.type,item.value,item.readonly)
          div(style="padding:1rem").row
            .col-md-3.col-md-offset-3
              button.btn.btn-primary.btn-block(id='submit' type="button" onclick="SendNormalTrans(this)")
                span(class="glyphicon glyphicon-send" aria-hidden="true")
                  | &nbsp
                span
                  | 发送
      .col-md-6
        include includes/form
        .panel.panel-default
          .panel-heading
            h3.panel-title.text-center #{form.title}
          div(style="height:35rem;overflow:auto").panel-body
            form.form-horizontal
              each item,i in form.data
                +addRow(item.id,item.name,item.type,item.value,item.readonly)
          div(style="padding:1rem").row
            .col-md-offset-4.col-md-3
              button.btn.btn-primary.btn-block(id='submit' type="button" onclick="SendTrans(this)")
                span(class="glyphicon glyphicon-send" aria-hidden="true")
                  | &nbsp
                span
                  | 发送
            .col-md-3
              button.btn.btn-primary.btn-block(id='submit' type="button" onclick="ImportTrans(this)")
                span(class="glyphicon glyphicon-cloud-upload" aria-hidden="true")
                  | &nbsp
                span
                  | 添加


block scripts
    script(src='/javascripts/simtrans.js') 
